[
  {
    "_id": "{{@ system @}}-{{@ payload_property @}}s-all",
    "namespaced_identifiers": false,
    "source": {
      "operation": "{{@ payload_property @}}s-list",
      "system": "{{@ system @}}",
      "trace": {
        "log_request_body_maxsize": 100000,
        "log_response_body_maxsize": 100000
      },
      "type": "rest"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ payload_property @}}s-collect",
    "exclude_completeness": [
      "{{@ system @}}-{{@ payload_property @}}s-share"
    ],
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-{{@ payload_property @}}s-all",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "add",
              "$last-modified",
              [
                "datetime-parse",
                "%Y-%m-%dT%H:%M:%SZ",
                "_S.updated_at"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "primary_key": "id",
          "share_dataset": "{{@ system @}}-{{@ payload_property @}}s-share"
        },
        "template": "transform-collect-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ payload_property @}}s-share",
    "batch_size": 1,
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ payload_property @}}s-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "create-payload": [
            [
              "copy",
              "*",
              [
                "list",
                "_*",
                "$*"
              ]
            ]
          ],
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "add",
              "$payload",
              [
                "dict",
                "{{@ payload_property @}}",
                [
                  "apply",
                  "create-payload",
                  "_S."
                ]
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "operation_delete": "{{@ payload_property @}}s-delete",
          "operation_insert": "{{@ payload_property @}}s-insert",
          "operation_lookup": "{{@ payload_property @}}s-lookup",
          "operation_update": "{{@ payload_property @}}s-update",
          "primary_key": "id",
          "rest_system": "{{@ system @}}",
          "share_dataset": "{{@ system @}}-{{@ payload_property @}}s-share"
        },
        "template": "transform-share-rest",
        "trace": {
          "log_request_body_maxsize": 100000,
          "log_response_body_maxsize": 100000
        },
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]